
general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"

battery 0 {
  format = "%status %percentage %remaining"
  format_down = "No battery"
  status_chr = "⚡"
  status_bat = "🔋"
  status_unk = "? "
  status_full = "☻ "
  status_idle = "☻ "
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}


cpu_usage {
  format = "  %usage"
}

memory {
  format = "  %used / %total"
  threshold_degraded = "10%"
  format_degraded = "  %free"
}

tztime local {
  format = "  %d-%m     %H:%M"
}

