
general {
  output_format = "dzen2"
  colors = true
  interval = 5
}

order += "battery 0"
order += "cpu_temperature 0"
order += "load"
order += "memory"
order += "tztime local"

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = "⚡ CHR"
  status_bat = "🔋 BAT"
  status_unk = "? UNK"
  status_full = "☻ FULL"
  status_idle = "☻ IDLE"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

cpu_temperature {
  format = " %degrees"
  path = "/sys/devices/platform/coretemp.0/temp1_input"
}

load {
  format = "%5min"
}

memory {
  format = "%used"
  threshold_degraded = "10%"
  format_degraded = " %free"
}

tztime local {
  format = "  %d-%m     %H:%M"
}

